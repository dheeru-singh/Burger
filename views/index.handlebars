<div class="row ">
  <div class="col-sm-6 not-devored-section">
    <h2>Waiting for Devoured!</h2>
    <ul>
      {{#each burgers}}
        {{#unless devoured}}
          {{> burgers/burger-block devour=true }}
        {{/unless}}
      {{/each}}
    </ul>
  </div>

  <div class="col-sm-6 devored-section">
    <h2>Devoured!</h2>
    <ul>
      {{#each burgers}}
        {{#if devoured}}
          {{> burgers/burger-block devour=false}}
        {{/if}}
      {{/each}}
    </ul>
  </div>
</div>
<div class="row ">
  <div class="col-sm-4"></div>
  <div class="col-sm-4">
    <div class="form-section">
    <h2>Add a Burger</h2>
    <form class="create-form">

      <div class="form-group">
        <label for="brgr">Burger Name:</label>
        <input type="text" id="brgr" name="name" class="form-control">
      </div>

      <button type="submit" class="btn btn-block">Add Burger</button>
    </form>
    </div>
  </div>
  <div class="col-sm-4"></div>
</div>






